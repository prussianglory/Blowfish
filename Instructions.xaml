<Window x:Class="CW___Blowfish.Instructions"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CW___Blowfish"
        mc:Ignorable="d"
        Title="Помощь" MinHeight="650" MinWidth="500" Background="White" WindowStartupLocation="CenterScreen" >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.1*"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Label  Content="Как этим пользоваться?" Style="{StaticResource HelpLabel}"/>
        <Border Style="{StaticResource notCalledBorder}" Grid.Row="1">
            <ScrollViewer  Style="{StaticResource InstructionStyle}">
            <TextBlock x:Name="Help"  />
            </ScrollViewer>
        </Border>
    </Grid>
</Window>
